<ImagesExample@GridLayout>:
    cols: 3
    
    Image:
        source: "images/cake.jpg"
    
    Image:
        source: "images/cake.jpg"
        allow_stretch: True
    
    Image:
        source: "images/cake.jpg"

<WidgetsExample>
    cols: 3
    
    ToggleButton:
        id: my_toggle
        text: "OFF"
        on_state: root.on_toggle_button_state(self)
        size_hint: None, 1
        width: "100dp"

    Button:
        text: "Count"
        on_press: root.on_button_clicked()
        disabled: my_toggle.state == "normal"

    Label:
        text: root.my_text
        font_name: "fonts/Lcd.ttf"
        font_size: "80dp"
        color: 1, .5, 1

    Switch:
        id: my_switch
        size_hint: None, 1
        width: "100dp"
        active: True

    Slider:
        id: my_slider
        min: 0    # These are the
        max: 100  # default values
        value: 50
        orientation: "vertical"
        disabled: not my_switch.active
        # on_value: root.on_slider_value(self)

    BoxLayout:
        orientation: "vertical"
        Label:
            text: str(int(my_slider.value))
        ProgressBar:
            max: my_slider.max
            value: my_slider.value

    TextInput:
        id: my_text_input
        size_hint: None, 1
        width: "100dp"
        text: "foo"
        multiline: False
        on_text_validate: root.on_text_validate(self)

    Label:
        text: f"Your name is: {root.text_input_str}"

